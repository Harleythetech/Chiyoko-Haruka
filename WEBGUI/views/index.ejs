<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Chiyoko Haruka | Dashboard</title>
    <link rel="stylesheet" href="/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="d-flex flex-column" style="min-height: 100vh;">
    <!-- Main Navigation -->
    <nav class="navbar navbar-expand-lg sticky-top glass-nav bg-body-tertiary bg-opacity-75 shadow-sm">
        <div class="container-fluid px-5">
            <div class="navbar-brand d-flex align-items-center">
                <div>
                    <div class="fw-semibold fs-5">Chiyoko Haruka</div>
                    <span class="badge bg-primary bg-opacity-25 text-primary rounded-pill px-3" style="font-size: 0.75rem;" id="ver_webgui">v1.0.0</span>
                </div>
            </div>
            
            <div class="d-flex align-items-center gap-3">
                <!-- Theme Toggle -->
                <button class="btn btn-outline-secondary btn-sm rounded-2 px-3" id="themeToggle" type="button">
                    <i class="bi bi-moon-fill theme-icon-dark"></i>
                    <i class="bi bi-sun-fill theme-icon-light d-none"></i>
                </button>
                
                <!-- Refresh Button -->
                <button class="btn btn-outline-primary btn-sm rounded-2 px-3" id="refreshBtn" type="button">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>

                <div class="d-none d-lg-flex align-items-center bg-body-secondary bg-opacity-50 rounded-2 px-3 py-2 glass-effect border border-opacity-25">
                    <div class="text-end me-2 d-flex">
                        <div class="fw-medium small me-2" id="hostName">---</div>
                        <div class="text-muted small me-2">|</div>
                        <div class="text-muted small me-2" id="hostIP">---.---.---.---</div>
                        <div class="text-muted small me-2">|</div>
                        <div class="text-muted small" id="hostPort">----</div>
                    </div>
                    <div class="bg-success rounded rounded-1" style="width: 8px; height: 8px;"></div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid p-4">

        <!-- Statistics Content -->
        <div class="tab-content" id="statsTabContent">
            <!-- General Stats Tab -->
            <div class="tab-pane fade show active" id="general-stats" role="tabpanel" aria-labelledby="general-tab">
                <div class="row g-4 mb-4">
                    <!-- Bot Status -->
                    <div class="col-sm-6 col-lg-3">
                        <div class="card h-100 bg-body-secondary bg-opacity-50 border-0 glass-effect">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-success bg-opacity-25 text-success rounded-3 p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                    <i class="bi bi-robot fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="text-muted small fw-medium mb-1">Bot Status</div>
                                    <div class="fs-4 fw-semibold" id="botStatus">Online</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Servers -->
                    <div class="col-sm-6 col-lg-3">
                        <div class="card h-100 bg-body-secondary bg-opacity-50 border-0 glass-effect">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-primary bg-opacity-25 text-primary rounded-3 p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                    <i class="bi bi-buildings fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="text-muted small fw-medium mb-1">Servers</div>
                                    <div class="fs-4 fw-semibold" id="guildCount">0</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Users -->
                    <div class="col-sm-6 col-lg-3">
                        <div class="card h-100 bg-body-secondary bg-opacity-50 border-0 glass-effect">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-info bg-opacity-25 text-info rounded-3 p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                    <i class="bi bi-people fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="text-muted small fw-medium mb-1">Users</div>
                                    <div class="fs-4 fw-semibold" id="userCount">0</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Ping -->
                    <div class="col-sm-6 col-lg-3">
                        <div class="card h-100 bg-body-secondary bg-opacity-50 border-0 glass-effect">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-warning bg-opacity-25 text-warning rounded-3 p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                    <i class="bi bi-wifi fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="text-muted small fw-medium mb-1">Ping</div>
                                    <div class="fs-4 fw-semibold" id="ping">0ms</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Twitch Stats Tab -->
            <div class="tab-pane fade" id="twitch-stats" role="tabpanel" aria-labelledby="twitch-tab">
                <div class="row g-4 mb-4">
                    <!-- Twitch Monitoring Status -->
                    <div class="col-sm-6 col-lg-3">
                        <div class="card h-100 bg-body-secondary bg-opacity-50 border-0 glass-effect">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-purple bg-opacity-25 text-purple rounded-3 p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background-color: rgba(145, 70, 255, 0.25) !important; color: #9146FF !important;">
                                    <i class="bi bi-twitch fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="text-muted small fw-medium mb-1">Twitch Monitor</div>
                                    <div class="fs-4 fw-semibold" id="twitchStatus">Offline</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Total Streamers -->
                    <div class="col-sm-6 col-lg-3">
                        <div class="card h-100 bg-body-secondary bg-opacity-50 border-0 glass-effect">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-secondary bg-opacity-25 text-secondary rounded-3 p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                    <i class="bi bi-camera-video fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="text-muted small fw-medium mb-1">Monitored</div>
                                    <div class="fs-4 fw-semibold" id="totalStreamers">0</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Live Streamers -->
                    <div class="col-sm-6 col-lg-3">
                        <div class="card h-100 bg-body-secondary bg-opacity-50 border-0 glass-effect">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-danger bg-opacity-25 text-danger rounded-3 p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                    <i class="bi bi-record-circle fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="text-muted small fw-medium mb-1">Live Now</div>
                                    <div class="fs-4 fw-semibold" id="liveStreamers">0</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Twitch Servers -->
                    <div class="col-sm-6 col-lg-3">
                        <div class="card h-100 bg-body-secondary bg-opacity-50 border-0 glass-effect">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-info bg-opacity-25 text-info rounded-3 p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                    <i class="bi bi-gear fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="text-muted small fw-medium mb-1">Configured</div>
                                    <div class="fs-4 fw-semibold" id="twitchGuilds">0</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Link Scanner Stats Tab -->
            <div class="tab-pane fade" id="security-stats" role="tabpanel" aria-labelledby="security-tab">
                <div class="row g-4 mb-4">
                    <!-- Link Scanner Status -->
                    <div class="col-sm-6 col-lg-3">
                        <div class="card h-100 bg-body-secondary bg-opacity-50 border-0 glass-effect">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-warning bg-opacity-25 text-warning rounded-3 p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                    <i class="bi bi-shield-check fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="text-muted small fw-medium mb-1">Link Scanner</div>
                                    <div class="fs-4 fw-semibold" id="linkScannerStatus">Offline</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Blocked Domains -->
                    <div class="col-sm-6 col-lg-3">
                        <div class="card h-100 bg-body-secondary bg-opacity-50 border-0 glass-effect">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-danger bg-opacity-25 text-danger rounded-3 p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                    <i class="bi bi-ban fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="text-muted small fw-medium mb-1">Blocked Domains</div>
                                    <div class="fs-4 fw-semibold" id="blockedDomains">0</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Active Sources -->
                    <div class="col-sm-6 col-lg-3">
                        <div class="card h-100 bg-body-secondary bg-opacity-50 border-0 glass-effect">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-success bg-opacity-25 text-success rounded-3 p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                    <i class="bi bi-list-check fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="text-muted small fw-medium mb-1">Active Sources</div>
                                    <div class="fs-4 fw-semibold" id="activeSources">0</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Total Sources -->
                    <div class="col-sm-6 col-lg-3">
                        <div class="card h-100 bg-body-secondary bg-opacity-50 border-0 glass-effect">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-info bg-opacity-25 text-info rounded-3 p-3 me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                    <i class="bi bi-database fs-4"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="text-muted small fw-medium mb-1">Total Sources</div>
                                    <div class="fs-4 fw-semibold" id="totalSources">0</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-body-secondary bg-opacity-50 border-0 glass-effect">
                    <div class="card-body p-3">
                        <nav aria-label="Stats navigation">
                            <ul class="nav nav-pills justify-content-center" id="statsNav" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="general-tab" data-bs-toggle="pill" data-bs-target="#general-stats" type="button" role="tab" aria-controls="general-stats" aria-selected="true">
                                        <i class="bi bi-graph-up me-2"></i>General Stats
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="twitch-tab" data-bs-toggle="pill" data-bs-target="#twitch-stats" type="button" role="tab" aria-controls="twitch-stats" aria-selected="false">
                                        <i class="bi bi-twitch me-2"></i>Twitch Monitor
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="security-tab" data-bs-toggle="pill" data-bs-target="#security-stats" type="button" role="tab" aria-controls="security-stats" aria-selected="false">
                                        <i class="bi bi-shield-check me-2"></i>Link Scanner
                                    </button>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Dashboard Row 1: Music Sessions + System Monitor -->
        <div class="row g-4 mb-4">
            <!-- Music Player Section -->
            <div class="col-lg-8">
                <div class="card bg-body-secondary bg-opacity-50 border-0 glass-effect h-100 d-flex flex-column">
                    <div class="card-header bg-transparent border-bottom border-opacity-25 d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-music-note-list me-2 text-primary"></i>
                            <h5 class="mb-0 fw-semibold">Active Music Sessions</h5>
                        </div>
                        <span class="badge bg-primary bg-opacity-25 text-primary rounded-pill" id="activeMusicCount">0</span>
                    </div>
                    <div class="card-body p-4 flex-grow-1 d-flex flex-column">
                        <!-- No Music State -->
                        <div id="noMusicState" class="text-center py-5 flex-grow-1 d-flex flex-column justify-content-center">
                            <div class="mb-3">
                                <i class="bi bi-music-note-beamed text-muted opacity-50" style="font-size: 4rem;"></i>
                            </div>
                            <h6 class="text-muted mb-2">No Active Music Sessions</h6>
                            <p class="text-muted small mb-0">Music sessions will appear here when users are listening</p>
                        </div>

                        <!-- Music Sessions Container -->
                        <div id="musicSessions" class="d-none flex-grow-1">
                            <!-- Music sessions will be dynamically inserted here -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Monitor Section -->
            <div class="col-lg-4">
                <div class="card bg-body-secondary bg-opacity-50 border-0 glass-effect h-100">
                    <div class="card-header bg-transparent border-bottom border-opacity-25 d-flex align-items-center">
                        <i class="bi bi-cpu me-2 text-success"></i>
                        <h5 class="mb-0 fw-semibold">System Monitor</h5>
                    </div>
                    <div class="card-body p-4">
                        <!-- CPU Usage -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="small fw-medium text-muted">CPU Usage</span>
                                <span class="small fw-semibold" id="cpuValue">0%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-success" id="cpuProgress" style="width: 0%"></div>
                            </div>
                        </div>

                        <!-- Memory Usage -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="small fw-medium text-muted">Memory Usage</span>
                                <span class="small fw-semibold" id="memoryValue">0%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-info" id="memoryProgress" style="width: 0%"></div>
                            </div>
                            <div class="d-flex justify-content-between text-muted small mt-1">
                                <span id="memoryUsed">0 MB</span>
                                <span id="memoryTotal">0 MB</span>
                            </div>
                        </div>

                        <!-- Process Information -->
                        <div class="mb-4">
                            <div class="bg-body bg-opacity-50 rounded-3 p-3">
                                <div class="row g-2">
                                    <div class="col-6">
                                        <div class="text-center">
                                            <div class="text-primary fs-6 fw-bold" id="processId">0</div>
                                            <div class="small text-muted">Process ID</div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="text-center">
                                            <div class="text-info fs-6 fw-bold" id="threadCount">1</div>
                                            <div class="small text-muted">Threads</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Uptime -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="small fw-medium text-muted">Bot Uptime</span>
                                <span class="small fw-semibold" id="uptime">00:00:00</span>
                            </div>
                            <div class="d-flex justify-content-between text-muted small">
                                <span>Started:</span>
                                <span id="startTime">Loading...</span>
                            </div>
                        </div>

                        <!-- System Information -->
                        <div class="mb-4">
                            <div class="bg-body bg-opacity-50 rounded-3 p-3">
                                <div class="row g-2 text-center">
                                    <div class="col-4">
                                        <div class="text-warning fs-6 fw-bold" id="nodeVersion">v0.0.0</div>
                                        <div class="small text-muted">Node.js</div>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-success fs-6 fw-bold" id="platform">Unknown</div>
                                        <div class="small text-muted">Platform</div>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-primary fs-6 fw-bold" id="architecture">x64</div>
                                        <div class="small text-muted">Arch</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Memory Management Stats -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="small fw-medium text-muted">Memory Management</span>
                                <button class="btn btn-outline-primary btn-sm" onclick="forceGarbageCollection()">
                                    <i class="bi bi-arrow-clockwise me-1"></i>Force GC
                                </button>
                            </div>
                            <div class="bg-body bg-opacity-50 rounded-3 p-3">
                                <div class="row g-2 text-center">
                                    <div class="col-4">
                                        <div class="text-info fs-6 fw-bold" id="gcCollections">0</div>
                                        <div class="small text-muted">GC Runs</div>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-success fs-6 fw-bold" id="cacheEntries">0</div>
                                        <div class="small text-muted">Cache Items</div>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-warning fs-6 fw-bold" id="memoryFreed">0</div>
                                        <div class="small text-muted">MB Freed</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Connection Status -->
                        <div class="border-top border-opacity-25 pt-3">
                            <div class="d-flex align-items-center mb-2">
                                <div class="bg-success rounded-circle me-2" style="width: 8px; height: 8px;"></div>
                                <span class="small fw-medium text-muted">Discord Gateway</span>
                                <span class="ms-auto badge bg-success bg-opacity-25 text-success" id="gatewayStatus">Connected</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="bg-info rounded-circle me-2" style="width: 8px; height: 8px;"></div>
                                <span class="small fw-medium text-muted">Dashboard WebSocket</span>
                                <span class="ms-auto badge bg-info bg-opacity-25 text-info" id="socketStatus">Connected</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Dashboard Row 2: Twitch Management + Link Scanner -->
        <div class="row g-4">
            <!-- Twitch Management Section -->
            <div class="col-lg-6">
                <div class="card bg-body-secondary bg-opacity-50 border-0 glass-effect h-100 d-flex flex-column">
                    <div class="card-header bg-transparent border-bottom border-opacity-25 d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-twitch me-2" style="color: #9146FF;"></i>
                            <h5 class="mb-0 fw-semibold">Twitch Management</h5>
                        </div>
                        <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#twitchModal">
                            <i class="bi bi-gear"></i> Manage
                        </button>
                    </div>
                    <div class="card-body p-4 flex-grow-1 d-flex flex-column">
                        <!-- No Twitch Config State -->
                        <div id="noTwitchState" class="text-center py-5 flex-grow-1 d-flex flex-column justify-content-center">
                            <div class="mb-3">
                                <i class="bi bi-twitch text-muted opacity-50" style="font-size: 4rem; color: #9146FF !important;"></i>
                            </div>
                            <h6 class="text-muted mb-2">No Twitch Streamers Configured</h6>
                            <p class="text-muted small mb-3">Configure streamers per server to get live notifications</p>
                            <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#twitchModal">
                                <i class="bi bi-plus-lg"></i> Get Started
                            </button>
                        </div>

                        <!-- Twitch Streamers List -->
                        <div id="twitchSummary" class="d-none flex-grow-1">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="mb-0 text-muted">Monitored Streamers</h6>
                            </div>
                            
                            <div id="streamersList" class="flex-grow-1" style="max-height: 300px; overflow-y: auto;">
                                <!-- Streamers will be dynamically loaded here -->
                            </div>
                            
                            <div class="border-top border-opacity-25 pt-3 mt-3">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="small text-muted">Servers</div>
                                        <div class="fw-bold text-primary" id="summaryServers">0</div>
                                    </div>
                                    <div class="col-4">
                                        <div class="small text-muted">Total</div>
                                        <div class="fw-bold text-secondary" id="summaryStreamers">0</div>
                                    </div>
                                    <div class="col-4">
                                        <div class="small text-muted">Live</div>
                                        <div class="fw-bold text-danger" id="summaryLive">0</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Link Scanner Management Section -->
            <div class="col-lg-6">
                <div class="card bg-body-secondary bg-opacity-50 border-0 glass-effect h-100 d-flex flex-column">
                    <div class="card-header bg-transparent border-bottom border-opacity-25 d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-shield-check me-2 text-warning"></i>
                            <h5 class="mb-0 fw-semibold">Link Scanner</h5>
                        </div>
                        <div>
                        <button class="btn btn-outline-warning btn-sm" data-bs-toggle="modal" data-bs-target="#linkScannerModal">
                            <i class="bi bi-gear"></i> Manage
                        </button>
                        <button class="btn btn-outline-success btn-sm" id="refreshSourcesBtn">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                        </div>
                    </div>
                    <div class="card-body p-4 flex-grow-1 d-flex flex-column">
